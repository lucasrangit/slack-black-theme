#!/bin/sh

set -eu

file1="/usr/lib/slack/resources/app.asar.unpacked/src/static/index.js"
file2="/usr/lib/slack/resources/app.asar.unpacked/src/static/ssb-interop.js"

unpatch_file() {
  if [ -f ${1}.orig ]; then
    mv -f ${1}.orig ${1}
  fi
}

if [ "$1" = "remove" ]; then
  echo "DEBUG: slack-black-theme is being removed"
  unpatch_file "${file1}"
  unpatch_file "${file2}"
fi

